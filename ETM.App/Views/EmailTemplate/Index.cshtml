@model IEnumerable<EmailTemplateViewModel>
@{
    ViewData["Title"] = "Email Templates";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 1;
}

<div class="pageheader">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item"><a href="#">@ViewBag.Title</a></li>
    </ol>
</div>

<div style="text-align:right; padding-bottom:10px">
    <a class="btn btn-primary btn-sm"  asp-action="Create" asp-controller="EmailTemplate">Add Template</a>
</div>

<div class="panel panel-default">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">User</h4>
                    <div class="table-responsive">
                        <table id="example" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Subject</th>
                                    <th>Code</th>
                                    <th>Actions</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {                                    
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.Name</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Code</td>
                                        <td>
                                        <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id"> <i class="fas fa-edit"></i>Edit</a>
                                        </td>
                                    </tr>
                                    i = i + 1;
                                }
                            </tbody>
                            <tfoot></tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

