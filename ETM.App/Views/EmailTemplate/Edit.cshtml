@model EmailTemplateViewModel
@{
    ViewData["Title"] = "Edit Template";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pageheader">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="index" asp-controller="EmailTemplate">Email Template</a></li>
        <li class="breadcrumb-item"><a href="#">@ViewBag.Title</a></li>
    </ol>
</div>


<div class="panel panel-default">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ViewBag.Title</h4>

                    <form class="forms-sample" method="post" asp-action="Edit" asp-controller="EmailTamplate" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="EmailName">Template Name</label>
                            <input class="form-control" type="text" asp-for="Name" placeholder="Email Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Code">Code</label>
                            <input class="form-control" type="text" asp-for="Code" placeholder="Code" readonly />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label for="Code">Subject</label>
                            <input class="form-control" type="text" asp-for="Subject" placeholder="Subject" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="EmailBody">Template</label>
                            <textarea id="summernote" asp-for="Template"></textarea>
                            <span asp-validation-for="Template" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Submit</button>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>