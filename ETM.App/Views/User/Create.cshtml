@model UserViewModel
@{
    ViewData["Title"] = "Add a user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pageheader">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="index" asp-controller="User">Users </a></li>
        <li class="breadcrumb-item"><a href="#">@ViewBag.Title</a></li>
    </ol>
</div>

<div class="panel panel-default">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ViewBag.Title</h4>

                    <form method="post" enctype="multipart/form-data" asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="Firstname">Firstname</label>
                            <input class="form-control" type="text" asp-for="FirstName" placeholder="Firstname " />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Middlename">Middlename</label>
                            <input class="form-control" type="text" asp-for="Middlename" placeholder="Middlename" />
                            <span asp-validation-for="Middlename" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Lastname">Lastname</label>
                            <input class="form-control" type="text" asp-for="Lastname" placeholder="Lastname" />
                            <span asp-validation-for="Lastname" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Username">Username</label>
                            <input class="form-control" type="text" asp-for="Username" placeholder="Username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input class="form-control" type="text" asp-for="Email" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="PhoneNumber">PhoneNumber</label>
                            <input class="form-control" type="text" asp-for="PhoneNumber" placeholder=" PhoneNumber" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Passcode">Passcode</label>
                            <input class="form-control" type="password" asp-for="Passcode" placeholder="Passcode" />
                            <span asp-validation-for="Passcode" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Passcode">Channel</label>
                            <select asp-for="Channel" class="form-control" asp-items="Html.GetEnumSelectList<ETM.App.Channels>()"></select>
                            <span asp-validation-for="Channel" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Submit</button>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>